//LOWER_BOUND(n) - FIRST ELEMENT GREATER THAN EQUAL TO n
//UPPER_BOUND(n) - FIRST ELEMENT GREATER THAN n

//-------------------------------------------------------------------------------------------------------------------------------------------------------------- 

int poww(int a, int b) {
    int ans=1;
    while(b>0) {
        if(b%2) {
            b--;
            ans=(ans*a)%modulo ;
        }
        else {
            b/=2;
            a=(a*a)%modulo ;
        }
    }
    return ans;
}

void solve () {
    int n=0,m=0,a=0,b=0,c=0,d=0,x=0,y=0,z=0,w=0,k=0; 
    cin>>n>>k;
    string s;
    cin>>s;
    int mid=(n-1)/2;
    rep(i,0,mid+1,1) {
        x=s[i]-'a';
        y=(y+x*poww(k,mid-i))%modulo;
    }
    if(n>1) {
        while(mid>=0 && s[mid]==s[n-mid-1]) {
            mid--;
        } 
        if(mid>=0 && s[n-mid-1]>s[mid]) y++;
    }
    cout<<y%modulo<<en;
}

